{
    "testEnvironment": "node",
    "transform": {
        "^.+\\.(t|j)sx?$": [
            "@swc/jest"
        ]
    },
    "setupFilesAfterEnv": [
        "<rootDir>/jest.setup.js"
    ],
    "moduleNameMapper": {
        "^@/(.*)$": "<rootDir>/src/$1",
        "^@app-core/(.*)$": "<rootDir>/packages/$1/src",
        "^@features/(.*)$": "<rootDir>/packages/$1/src"
    },
    "testMatch": [
        "**/__tests__/**/*.{js,jsx,ts,tsx}",
        "**/?(*.)+(spec|test).{js,jsx,ts,tsx}"
    ],
    "collectCoverageFrom": [
        "packages/*/src/**/*.{ts,tsx}",
        "!packages/*/src/**/*.d.ts",
        "!packages/*/src/**/index.ts"
    ],
    "coverageThreshold": {
        "global": {
            "branches": 70,
            "functions": 75,
            "lines": 80,
            "statements": 80
        }
    }
}